import React,{useState,useEffect} from 'react';
import {
  SafeAreaView,
  StyleSheet,
  ScrollView,
  View,
  Text,
  StatusBar,
  TouchableHighlight,
  Alert,
} from 'react-native';

import {
  Header,
  LearnMoreLinks,
  Colors,
  DebugInstructions,
  ReloadInstructions,
} from 'react-native/Libraries/NewAppScreen';

const App = () => {


  const[contador,setContador] = useState(0) 


  useEffect(()=>{
    
    const comprobarContador = () => {
      if(contador == 20){
        Alert.alert(
          "Alert Title",
          "My Alert Msg",
          [
            {
              text: "Cancel",
              onPress: () => console.log("Cancel Pressed"),
              style: "cancel"
            },
            { text: "OK", onPress: () => console.log("OK Pressed") }
          ],
          { cancelable: false }
        );
      }
    }

    comprobarContador()


  },[contador])

  const sumarContador = () => {
    setContador(contador+1)
  }

  return (
    <>
    
      <View style={styles.contenedor}>
        <View style={styles.mensaje}>
          <Text style={styles.titulo}>Hola Pulsame las veces que quieras</Text>
        </View>

      
      
          <TouchableHighlight
          style={styles.boton}
            onPress={() => sumarContador()}
          >
            <Text>PULSAME !!! </Text>
          </TouchableHighlight>
    


          <View style={styles.contenedorResultado}>
            <Text style={styles.resultado}>
              {contador}
            </Text>
          </View>
      
 
      
      </View>
    </>
  );
};

const styles = StyleSheet.create({
  resultado:{
    fontSize:100,
    fontWeight:'bold'
  },
  boton:{
    padding:30,

    marginTop:'2%',
    backgroundColor:'orange'
  },
  contenedorResultado:{
    backgroundColor:'green',
    padding:30,
    marginTop:'2%'
  },
  titulo:{
    fontSize:20,
    fontWeight:'bold'
  },
  mensaje:{
    backgroundColor:'#FFFF',
    padding:'10%',
    borderTopEndRadius:60,
    borderBottomRightRadius:60
  },
  contenedor:{
    flex:1,
    justifyContent:'center',
    alignItems:'center',
    backgroundColor:'red'
  }
});

export default App;
